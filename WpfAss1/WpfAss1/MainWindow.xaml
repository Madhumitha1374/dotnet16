<Window x:Class="WpfAss1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAss1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel Orientation="Horizontal" >
                <Label Content="UserName" FontSize="30"/>
                <TextBox Height="30" Width="200" Margin="10" x:Name="username" FontSize="20"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <Label Content="Password" FontSize="30" Margin="8"/>
                <PasswordBox Height="30" Width="200" Margin="10" x:Name="password" PasswordChar="*" FontSize="20"/>
            </WrapPanel>
            <Button Content="Submit" Height="40" Margin="20" Width="200" FontSize="20" Background="CadetBlue" Foreground="White" Click="Button_Click"/>
        </WrapPanel>
    </Grid>
</Window>
