<Window x:Class="WPFAssg2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAssg2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Orientation="Vertical">
            <WrapPanel Orientation="Horizontal">
                <TextBox x:Name="txtBox1" Height="35" Width="300" Margin="20"/>
                <Button Height="35" Width="200" Content="Browse" Margin="20" FontSize="20" Click="Button_Click"/>
            </WrapPanel>
            <WrapPanel Orientation="Horizontal">
                <TextBox x:Name="txtBox2" Height="35" Margin="20" Width="300"/>
                <Button Height="35" Width="200" Content="Browse" Margin="20" FontSize="20"/>
            </WrapPanel>
            <Button Content="Execute" Width="200" Height="35" Click="Button_Click" Margin="20"/>
        </WrapPanel>
    </Grid>
</Window>
